{
  "$schema": "../../spec/latest/schema.json",
  "version": "1.0.0",
  "jobs": [
    {
      "name": "response speed",
      "runs": 10000,
      "benchmark": "node bench/response.js",
      "environment": [
        "node:9",
        "node:8",
        "node:6"
      ]
    },
    {
      "name": "database migration",
      "runs": 100,
      "benchmark": "node bench/migrate.js",
      "environment": "node:9",
      "before": [
        {
          "name": "prep",
          "command": "node bench/helpers/reset-db.js"
        }
      ],
      "after": [
        {
          "name": "cleanup",
          "command": "node bench/helpers/reset-db.js",
          "background": true
        }
      ]
    }
  ]
}
